@model noticiasAuto.Models.Pilotos

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<script>
    function funcao1() {
        alert("Piloto Criado!");
    }
</script>

@using (Html.BeginForm("Create", "Pilotos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Criar Piloto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <h5>Nome do Piloto:</h5>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <h5>Data de Nascimento:</h5>
                <input class="form-control" type="date" style="width:160px" name="DataNascimento" min="1900-01-01" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" max=@DateTime.Now.ToString("yyyy-MM-dd") />
                @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*Html.LabelFor(model => model.Nacionalidade, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <h5>Nacionalidade do Piloto:</h5>
                @Html.EditorFor(model => model.Nacionalidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nacionalidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*Html.LabelFor(model => model.Fotografia, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <h5>Fotografia do Piloto:</h5>
                <input type="file" name="fileUploadLogo" style="color:blue;" accept=".jpg" />
                @Html.ValidationMessageFor(model => model.Fotografia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @*<p style="font-weight:bold;" class="control-label col-md-2">Equipa</p>*@
            <div class="col-md-10">
                <h5>Equipa do Piloto:</h5>
                @Html.DropDownList("EquipaFK", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EquipaFK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            &nbsp; &nbsp;<input type="submit" value="Criar Piloto" class="btn btn-success" onclick="funcao1()" />


        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
